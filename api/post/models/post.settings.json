{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Content": {
      "type": "richtext"
    },
    "ViewCount": {
      "type": "integer",
      "default": 0
    },
    "UpvoteCount": {
      "type": "integer",
      "default": 0
    },
    "DownvoteCount": {
      "type": "integer",
      "default": 0
    },
    "Status": {
      "type": "string"
    },
    "PublishTime": {
      "type": "datetime"
    },
    "Reports": {
      "via": "Post",
      "collection": "report"
    },
    "SubjectTag": {
      "via": "Posts",
      "model": "subject-tag"
    },
    "TeacherTag": {
      "via": "Posts",
      "model": "teacher-tag"
    },
    "User": {
      "model": "account-user",
      "via": "Posts"
    },
    "HistoryDetails": {
      "via": "Post",
      "collection": "history-detail"
    },
    "Comments": {
      "via": "Post",
      "collection": "comment"
    }
  }
}
